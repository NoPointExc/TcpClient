<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_connect" />
    <!-- receive -->

    <TextView
        android:id="@+id/txt_receive"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="@string/txt_receive" />

    <TextView
        android:id="@+id/edit_receive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_receive" />

    <TextView
        android:id="@+id/txt_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_send" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#616161" />
    <!-- send -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edit_send"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/edit_send" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_send" />
    </LinearLayout>
    <!-- L1~L4 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:onClick="L1Onclick"
            android:text="L1" />

        <Button
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:onClick="L2Onclick"
            android:text="L2" />

        <Button
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:onClick="L3Onclick"
            android:text="L3" />

        <Button
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:onClick="L4Onclick"
            android:text="L4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edit_T"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="20" />

        <Button
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:onClick="TOnclick"
            android:text="T" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="checkOnclick"
        android:text="check net state" />

</LinearLayout>